<h1>Show Figure</h1>
<%= @figure.name %>

<ul>
<% @figure.titles.each do |title| %>
<li><%= title.name %></li>
<% end %>
</ul>

<ul>
<% @figure.landmarks.each do |landmark| %>
<li><%= landmark.name %>, <%= landmark.year_completed %></li>
<% end %>
</ul>

<div class="button">
  <a href="/figures/<%= @figure.id %>/edit">Edit Figure</a>
</div>
